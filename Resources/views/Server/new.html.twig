{% extends '@ClimberdavHPLayer/layout.html.twig' %}
{% trans_default_domain 'ClimberdavHPLayer' %}

{% block title %}{{ 'server.new'|trans|capitalize }}{% endblock %}

{% block content %}
    {{ form_start(form) }}
    <div class="row">
        <div class="col-lg-6 col-md-6 col-sm-4 col-xs-12">
            {{ form_row(form.name) }}
            {{ form_row(form.ip) }}
            {{ form_row(form.port) }}
            {{ form_row(form.root) }}
            {{ form_row(form.login) }}
            {{ form_row(form.password) }}
            {{ form_row(form.disabled) }}
            {{ form_row(form.protocol) }}
            {{ form_row(form.firstDayOfServer) }}
            {{ form_row(form.previousServer) }}
        </div>
        <p></p>
    </div>
    {#Form's actions#}
    <div class="row">
        <div class="col-lg-2 col-md-2 col-sm-2 col-xs-4">
            <a class="btn btn-info" href="{{ path('climberdav_hp_layer_server_index') }}">{{ 'server.back'|trans|capitalize }} </a>
        </div>
        <div class="col-lg-2 col-md-2 col-sm-2 col-xs-4">
            {{ form_widget( form.save, {'attr': {'class': 'btn btn-success pull-right'} } ) }}
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}